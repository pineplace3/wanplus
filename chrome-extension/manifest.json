{
  "manifest_version": 3,
  "name": "ページキャプチャ＆PDF化ツール",
  "version": "1.0.0",
  "description": "画面をキャプチャしてPDF化する拡張機能",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "offscreen",
    "debugger",
    "unlimitedStorage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
